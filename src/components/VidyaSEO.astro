---
import {Seo} from "astro-seo-meta";
import {Schema} from "astro-seo-schema"
const updatedTime = new Date().toISOString()

interface Props {
    title?: string
    description?: string
    type?: string
    image?: string
    noindex?: boolean
    nofollow?: boolean
    meta?: Array<{name: string, content: string}>
    schema?: any
    openGraph?: any
    twitterCard?: string
}

const {title, description, type, image, meta, noindex, nofollow, schema, openGraph, twitterCard} = Astro.props
const modifiedTitle = title ?? "Vidya LLC: Software Modernization & IT Consulting for Business and Government"
const absoluteImage = `${Astro.url.origin}${image ? `${image}` : "/vidya-social.png"}`

const baseOpenGraph = {
    basic: {
        title: modifiedTitle,
        type: type ?? "website",
        image: absoluteImage,
        locale: "en_US",
        updated_time: {updatedTime}
    },
    optional: {
        siteName: "Vidya LLC"
    }
}
const og = openGraph ? Object.assign(baseOpenGraph, openGraph) : baseOpenGraph
---
<Seo title={title ?? "Vidya | AI & Cloud Consulting and Modernization"}
     description={description ?? "Vidya is a certified IT consulting firm specializing in AI, cloud, and software modernization services. Partner with our experts to transform your organization."}
     noindex={noindex ?? false}
     nofollow={nofollow ?? false}
     openGraph={og}
     extend={{
         meta: meta ?? []
     }}
/>
<meta property="og:image" content={absoluteImage}>
{schema && <Schema item={schema}/> }