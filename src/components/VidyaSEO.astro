---
import {SEO} from "astro-seo";
import {Schema} from "astro-seo-schema"
const updatedTime = new Date().toISOString()

interface Props {
    title?: string
    description?: string
    type?: string
    image?: string
    noindex?: boolean
    nofollow?: boolean
    meta?: Array<{name: string, content: string}>
    schema?: any
    twitterCard?: string
}

const {title, description, type, image, meta, noindex, nofollow, schema, twitterCard} = Astro.props
console.log(meta)
---
<SEO title={title ?? "Vidya LLC - Custom Software Development & IT Consulting Services"}
     description={description ?? "Vidya - Custom Software Development & IT Consulting | Technology Training Courses | 8(a) & SWaM Certified Small Business"}
     noindex={noindex ?? false}
     nofollow={nofollow ?? false}
     openGraph={{
         basic: {
             title: title ?? "Vidya LLC - Custom Software Development & IT Consulting Services",
             type: type ?? "website",
             image: image ?? `${Astro.url.origin}/vidya-social.png`,
             locale: "en_US",
             updated_time: {updatedTime}
         },
         optional: {
             siteName: "Vidya LLC"
         }
     }}
     twitter={{
         creator: "@VidyaSource",
         card: twitterCard ?? "summary_large_image",
         description: description ?? "Vidya - Custom Software Development & IT Consulting | Technology Training Courses | 8(a) & SWaM Certified Small Business"
     }}
     extend={{
         meta: meta ?? []
     }}
/>
{schema && <Schema item={schema}/> }