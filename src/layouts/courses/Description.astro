---
import {Image} from 'astro:assets';
import team from '../../img/courses/team2.jpg'

---
<div class="relative bg-white dark:bg-gray">
    <div class="mx-auto max-w-7xl lg:grid lg:grid-cols-12 lg:gap-x-8 lg:px-8">
        <div class="px-6 pb-24 pt-10 sm:pb-32 lg:col-span-7 lg:px-0 lg:pb-56 lg:pt-16 xl:col-span-6">
            <div class="mx-auto max-w-2xl lg:mx-0">
                <slot/>
            </div>
        </div>
        <div class="relative lg:col-span-5 lg:-mr-8 xl:absolute xl:inset-0 xl:left-1/2 xl:mr-0">
            <Image
                    src={team}
                    alt="Collaborating software engineers"
                    quality={100}/>
        </div>
    </div>
</div>