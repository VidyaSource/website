---
import BlogPostCard from '../../layouts/blog/BlogPostCard.astro'
import {blogPosts, BlogPost} from "../blog/blogUtils";

const recentPosts: Array<BlogPost> = await blogPosts.slice(0, 3)

---

<div class="relative bg-gray-light dark:bg-blue-light pt-16 pb-20 px-4 sm:px-6 lg:pt-24 lg:pb-28 lg:px-8">
    <div class="absolute inset-0">
        <div class="bg-white dark:bg-gray h-1/3 sm:h-2/3"/>
    </div>
    <section class="relative max-w-7xl mx-auto">
        <div class="text-center">
            <h2 class="text-3xl tracking-tight font-extrabold text-red sm:text-4xl">The latest from the Vidya blog</h2>
            <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-dark dark:text-blue-light sm:mt-4">
                Discover <a href="/blog">new insights</a> into everything from agile software development to innovative
                engineering techniques to the
                impact of technology on our world.
            </p>
        </div>
        <div class="mt-12 max-w-lg mx-auto grid gap-5 lg:grid-cols-3 lg:max-w-none">
            {recentPosts.map(p => {
                return (
                    <BlogPostCard {...p} classes="bg-blue-light" />
                )
            })}
        </div>
    </section>
</div>
